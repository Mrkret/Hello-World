<UserControl x:Class="WpfApplication1.NetWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="1,1,1,1" >
        <Border  Background="Gray" CornerRadius="9">
            <ScrollViewer  Background="{x:Null}"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                <StackPanel Name="NetWindowList" Orientation="Horizontal">

                    <local:NetWindowListItem/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
