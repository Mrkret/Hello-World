<UserControl x:Class="WpfApplication1.MusicWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="1,1,1,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Border Name="MusicWindowPlayer" Grid.Column="1" Grid.RowSpan="2" Background="DarkGray" CornerRadius="0,9,9,0" Margin="1,0,0,0">
            
        </Border>
        <Border Name="MusicWindowListHeader" Grid.Column="0" Grid.Row="0" Background="Gray" CornerRadius="9,0,0,0">
            
        </Border>
        <Border Name="MusicWindowList" Grid.Column="0" Grid.Row="1" Background="LightGray" CornerRadius="0,0,0,9 ">
            
        </Border>

    </Grid>
</UserControl>
